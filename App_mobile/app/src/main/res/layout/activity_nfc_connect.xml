<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".nfc_connect">

    <ImageView
        android:layout_width="180dp"
        android:src="@drawable/wireless_logo"
        android:layout_height="180dp"
        android:id="@+id/imageView"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="36dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <Button
        android:text="Retour"
        android:layout_width="121dp"
        android:layout_height="40dp"
        android:id="@+id/button" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
        android:layout_marginBottom="32dp" app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.465" android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintVertical_bias="0.976"
        android:onClick="retour"/>
    <TextView
        android:text="En attente d'une puce NFC"
        android:layout_width="239dp"
        android:layout_height="33dp"
        android:textSize="20dp"
        android:id="@+id/textView" android:layout_marginTop="56dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>