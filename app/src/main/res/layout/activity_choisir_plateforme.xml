<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".choisir_plateforme">

    <TextView
            android:text="NFC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50dp"
            android:id="@+id/textView2" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <ImageButton
            android:layout_width="198dp"
            android:layout_height="140dp" app:srcCompat="@drawable/PC_bureau"
            android:id="@+id/imageButton5" android:layout_marginTop="116dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            tools:layout_editor_absoluteX="170dp"/>
    <TextView
            android:text="Choisissez votre plateforme"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:textSize="25dp"
            tools:layout_editor_absoluteX="38dp" android:id="@+id/textView3" android:layout_marginTop="120dp"
            app:layout_constraintTop_toBottomOf="@+id/imageButton5" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.636"/>
    <ImageButton
            android:layout_width="152dp"
            android:layout_height="146dp" app:srcCompat="@drawable/logo_smartphone"
            android:id="@+id/imageButton11" android:layout_marginTop="116dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="4dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textView3" app:layout_constraintVertical_bias="0.0"/>
</android.support.constraint.ConstraintLayout>