<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".choisir_plateforme" android:onClick="choisir_portable">

    <TextView
            android:text="NFC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50dp"
            android:id="@+id/textView2" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <ImageButton
            android:layout_width="198dp"
            android:layout_height="140dp" app:srcCompat="@drawable/pc_bureau"
            android:id="@+id/imageButton5" android:layout_marginTop="116dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="Choisissez votre plateforme"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:textSize="25dp"
            android:id="@+id/textView3" android:layout_marginTop="120dp"
            app:layout_constraintTop_toBottomOf="@+id/imageButton5" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.636"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"/>
    <ImageButton
            android:layout_width="180dp"
            android:layout_height="214dp" app:srcCompat="@drawable/logo_tel"
            android:id="@+id/imageButton8"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/imageButton5" android:layout_marginEnd="8dp"
            android:layout_marginTop="108dp" app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintHorizontal_bias="0.333" android:onClick="choisir_portable"/>
</android.support.constraint.ConstraintLayout>